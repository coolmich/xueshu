        <% end %>
        <%= link_to "http://page.renren.com/601269960", :target=>'_blank' do %>
          <span>人</span>
        <% end %>

        <a href="#wechat" data-target="#wechat" data-toggle="modal" class="wechat"><%= image_tag "wechat.png", :class=>"wechat-icon" %></a>

